{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@global/*": [
                "./src/global/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ],
            "@configs/*": [
                "./src/configs/*"
            ],
            "@helpers/*": [
                "./src/helpers/*"
            ],
            "@hooks/*": [
                "./src/hooks/*"
            ],
            "@modules/*": [
                "./src/modules/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "vite.config.js"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}